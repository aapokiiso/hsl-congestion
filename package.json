{
    "name": "hsl-congestion-tram-7",
    "version": "1.0.0",
    "description": "Congestion tracking for Helsinki tram number 7",
    "license": "UNLICENSED",
    "scripts": {
        "lint": "npm run lint:css && npm run lint:js",
        "lint:js": "eslint --ext .js,.vue .",
        "lint:js:fix": "eslint --fix --ext .js,.vue .",
        "lint:css": "stylelint './**/*.scss' './**/*.vue'",
        "lint:css:fix": "stylelint './**/*.scss' './**/*.vue' --fix",
        "track-stop-times": "node ./api/script/track-stop-times",
        "api": "node ./api",
        "dev": "API_URL=http://`docker-compose port api 80` nuxt",
        "build": "API_URL=https://api-dot-hsl-tram-7-congestion-tracking.appspot.com nuxt build",
        "start": "nuxt start"
    },
    "husky": {
        "hooks": {
            "pre-push": "npm run lint"
        }
    },
    "dependencies": {
        "axios": "^0.18.0",
        "moment": "^2.24.0",
        "nuxt": "^2.4.5",
        "nuxt-svg-loader": "^1.0.1",
        "vue-i18n": "^8.9.0",
        "vuex-persist": "^2.0.0"
    },
    "devDependencies": {
        "babel-eslint": "^10.0.1",
        "eslint": "^5.15.3",
        "eslint-plugin-vue": "^5.2.2",
        "husky": "^1.3.1",
        "node-sass": "^4.11.0",
        "sass-loader": "^7.1.0",
        "stylelint": "^9.10.1",
        "stylelint-config-sass-guidelines": "^5.3.0"
    }
}
